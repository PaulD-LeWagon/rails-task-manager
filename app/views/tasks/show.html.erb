<h1>View Task Details</h1>

<div class="">
    <h3><%= @task.title %> - <%= link_to 'Edit task', tasks_edit_path(@task) %> </h3>
    <p><%= @task.desc %></p>
    <p><input type="checkbox" name="todo-item" disabled="true"<%= @task.done == true ? ' checked' : '' %>> Completed?</p>
    <!-- <%= check_box_tag "todo-item", 1, @task.done, disabled: false %> -->
</div>

<%= link_to 'All tasks', tasks_path %>&nbsp;|&nbsp;<%= link_to "Delete Task", task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
